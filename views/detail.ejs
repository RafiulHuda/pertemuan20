<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2>Detail Kontak</h2>
            <% if (!contact) { %>
              <div class="alert alert-danger fw-bold" role="alert">
                Data Contact tidak ada. <br>
                <a href="/contact" class="alert-link fw-normal">&laquo;Kembali ke daftar kontak</a>
              </div>
            <% } else { %>
            <div class="card" style="width: 20rem;">
                <div class="card-body">
                  <h5 class="card-title p-2"><%= contact.nama %></h5>
                  <h6 class="card-subtitle text-muted p-2"><%= contact.mobile %></h6>
                  <p class="card-text email p-2"><%= contact.email %></p>
                  <a href="/contact" class="card-link">&laquo;Kembali ke Contact list</a>
                </div>
              </div>
              <% } %>
        </div>
    </div>
</div>